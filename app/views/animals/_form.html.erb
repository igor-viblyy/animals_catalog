<div class="card mt-5">
  <div class="card-header">
    <h4 class="text-center font-weight-bold"> Додати друга </h4>
  </div>
  <div class="card-body">
    <%= form_for @animal, url: { action: 'create' }, multipart: true, html: { class: 'mt-5' }  do |f| %>
      <div class="form-group">
        <%= f.label :name, "Кличка:"%>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, "Фото" %>
        <%= f.file_field :avatar %>
      </div>
      
      <div class="form-group">
        <%= f.submit "Create", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>