<%= form_for @animal, url: { action: 'create' }, multipart: true, html: { class: 'mt-5' }  do |f| %>
  <div class="form-group">
    <%= f.label "Хто шукає дім"%>
    <%= collection_select :animal, :exemplar_id, Exemplar.all, :id, :name, {}, { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :name, "Кличка:"%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :avatar, "Фото" %>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Додати друга", class: 'btn btn-warning btn-block' %>
  </div>
<% end %>
