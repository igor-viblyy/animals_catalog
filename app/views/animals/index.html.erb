<div class="col-12 mt-3">
  <%= link_to "Добавити друга", new_animal_path, role: 'button', class: 'btn btn-primary mb-3' %>
  <div class="row">
    <% @animals.each do |animal| %>
      <div class="col-3">
        <div class= "card">
          <%= image_tag(animal.avatar, class: 'card-img-top') if animal.avatar.present? %>
          <div class="card-body">
            <p><%= animal.exemplar.name %></p>
            <h5 class="card-title font-weight-bold">  
              <%= animal.name %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
